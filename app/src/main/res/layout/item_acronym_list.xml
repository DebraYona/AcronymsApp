<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="@dimen/album_card_width_size"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:paddingBottom="26dp"
    android:paddingTop="26dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/tv_abbreviation"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:text="@{lfs.abbreviation}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSince"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@{lfs.since}"
        app:layout_constraintStart_toStartOf="@+id/tv_abbreviation"
        app:layout_constraintTop_toBottomOf="@+id/tv_abbreviation" />

    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:id="@+id/photo_progress_bar"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
